     * @param orderItem
     * @return AddressTypeEnum
     * @throws ServiceException
     */
    public AddressTypeEnum getShipToAddressTypeForOrderItem(OrderItem orderItem)
        throws ServiceException
    {
        AddressTypeEnum addressType = null;

        ConsumableOrderTypeEnum orderType = null;
        long consumableId = orderItem.getFulfillmentNeed().getConsumable().getConsumableId();

        DeviceTypeConsumablePK pk = new DeviceTypeConsumablePK();
        pk.setDeviceTypeId(orderItem.getFulfillmentNeed().getDevice().getDeviceType().getDeviceTypeId());
        pk.setConsumableId(consumableId);
        DeviceTypeConsumableJpaDao deviceTypeConsumableDao = new DeviceTypeConsumableJpaDao();
        deviceTypeConsumableDao.setEntityManager(getEntityManager());
        DeviceTypeConsumable deviceTypeConsumable = deviceTypeConsumableDao.findById(pk);

        if (deviceTypeConsumable != null)
        {
            orderType = deviceTypeConsumable.getConsumableOrderType();
        }
        if (orderType == null)
        {
            throw new ServiceException(ErrorLocalEnum.eConsumableOrderTypeNotFound, ErrorMinorEnum.eServiceLayer,
                    ErrorLocalEnum.eConsumableOrderTypeNotFound.getMessage()
                            + orderItem.getFulfillmentNeed().getDevice().getSerialNr() + "/"
                            + consumableId);
        }
        switch (orderType)
        {
            case eConsumable:
            case eLonglifeConsumable:
                addressType = AddressTypeEnum.eConsumableDelivery;
                break;
            case ePreventiveMaintenance:
                addressType = AddressTypeEnum.eServiceDelivery;
                break;
        }
        if (addressType == null)
        {
            throw new ServiceException(ErrorLocalEnum.eGenericOrderingError, ErrorMinorEnum.eServiceLayer,
                    "Cannot place order type:" + orderType.getDescription());
        }
        return addressType;
    }

}
