    /**
     * Get address for device.
     * If an building can be found for the device, get the address for that building as per the address type.
     * Otherwise, retrieve an site for the device. Get the address for that site as per the address type.
     * 
     * @param device 
     * @param addressType address type
     * @param activeAddressOnly Set <i>true</i> to only retrieve active building or site.
     * @return The address for device.
     * @throws ServiceException
     */
    public Address getAddressForDevice(Device device, AddressTypeEnum addressType, boolean activeAddressOnly)
        throws ServiceException
    {
        Address address = null;
        Object location = getLocationForDevice(device, activeAddressOnly);
        if (location == null)
        {
            switch (addressType)
            {
                case eConsumableDelivery:
                    throw new ServiceException(ErrorLocalEnum.eConsumableDeliveryAddressNotFound,
                            ErrorMinorEnum.eServiceLayer,
                            ErrorLocalEnum.eConsumableDeliveryAddressNotFound.getMessage() + " Device SN: "
                                    + device.getSerialNr());
                case eServiceDelivery:
                    throw new ServiceException(ErrorLocalEnum.eServiceDeliveryAddressNotFound,
                            ErrorMinorEnum.eServiceLayer, ErrorLocalEnum.eServiceDeliveryAddressNotFound.getMessage()
                                    + " Device SN: " + device.getSerialNr());
                case eHardwareShipTo:
                    throw new ServiceException(ErrorLocalEnum.eInvalidParameter, ErrorMinorEnum.eServiceLayer,
                            ErrorLocalEnum.eInvalidParameter.getMessage());
                case eDataCollector:
                    throw new ServiceException(ErrorLocalEnum.eDataCollectorAddressNotFound,
                            ErrorMinorEnum.eServiceLayer, ErrorLocalEnum.eDataCollectorAddressNotFound.getMessage()
                                    + " Device SN: " + device.getSerialNr());
                default:
                    throw new ServiceException(ErrorLocalEnum.eInvalidParameter, ErrorMinorEnum.eServiceLayer,
                        ErrorLocalEnum.eInvalidParameter.getMessage());
            }
        }

        Site site = null;
        if (location instanceof Building)
        {
            Building building = (Building)location;
            address = getAddressForBuilding(building, addressType, activeAddressOnly);
            if (address != null)
            {
                return address;
            }

            site = device.getSite();
        }
        else
        {
            site = (Site)location;
        }

        if (activeAddressOnly && !site.getIsActiveFl())
        {
            switch (addressType)
            {
                case eConsumableDelivery:// consumable delivery address
                    throw new ServiceException(ErrorLocalEnum.eConsumableDeliveryAddressNotFound,
                            ErrorMinorEnum.eServiceLayer,
                            ErrorLocalEnum.eConsumableDeliveryAddressNotFound.getMessage() + " Device SN: "
                                    + device.getSerialNr());
                case eServiceDelivery:// service delivery address
                    throw new ServiceException(ErrorLocalEnum.eServiceDeliveryAddressNotFound,
                            ErrorMinorEnum.eServiceLayer, ErrorLocalEnum.eServiceDeliveryAddressNotFound.getMessage()
                                    + " Device SN: " + device.getSerialNr());
                case eHardwareShipTo:
                    throw new ServiceException(ErrorLocalEnum.eInvalidParameter, ErrorMinorEnum.eServiceLayer,
                            ErrorLocalEnum.eInvalidParameter.getMessage());
                case eDataCollector://meaning if data collector address
                    throw new ServiceException(ErrorLocalEnum.eDataCollectorAddressNotFound,
                            ErrorMinorEnum.eServiceLayer, ErrorLocalEnum.eDataCollectorAddressNotFound.getMessage()
                                    + " Device SN: " + device.getSerialNr());
                default:
                    throw new ServiceException(ErrorLocalEnum.eInvalidParameter, ErrorMinorEnum.eServiceLayer,
                            ErrorLocalEnum.eInvalidParameter.getMessage());
            }
        }
        SiteAddressPK pk = new SiteAddressPK();
        pk.setSiteId(site.getSiteId());
        pk.setAddressType(addressType);

        SiteAddressJpaDao siteAddressDao = new SiteAddressJpaDao();
        siteAddressDao.setEntityManager(getEntityManager());

        SiteAddress siteAddress = siteAddressDao.findById(pk);
        if (siteAddress != null)
        {
            address = siteAddress.getAddress();
        }

        if (address == null)
        {
            switch (addressType)
            {
                case eConsumableDelivery:// consumable delivery address
                    throw new ServiceException(ErrorLocalEnum.eConsumableDeliveryAddressNotFound,
                            ErrorMinorEnum.eServiceLayer,
                            ErrorLocalEnum.eConsumableDeliveryAddressNotFound.getMessage() + " Device SN: "
                                    + device.getSerialNr());
                case eServiceDelivery:// service delivery address
                    throw new ServiceException(ErrorLocalEnum.eServiceDeliveryAddressNotFound,
                            ErrorMinorEnum.eServiceLayer, ErrorLocalEnum.eServiceDeliveryAddressNotFound.getMessage()
                                    + " Device SN: " + device.getSerialNr());
                case eHardwareShipTo:
                    throw new ServiceException(ErrorLocalEnum.eInvalidParameter, ErrorMinorEnum.eServiceLayer,
                            ErrorLocalEnum.eInvalidParameter.getMessage());
                case eDataCollector://meaning if data collector address
                    throw new ServiceException(ErrorLocalEnum.eDataCollectorAddressNotFound,
                            ErrorMinorEnum.eServiceLayer, ErrorLocalEnum.eDataCollectorAddressNotFound.getMessage()
                                    + " Device SN: " + device.getSerialNr());
                default:
                    throw new ServiceException(ErrorLocalEnum.eInvalidParameter, ErrorMinorEnum.eServiceLayer,
                            ErrorLocalEnum.eInvalidParameter.getMessage());
            }
        }

        return address;
    }

    protected Object getLocationForDevice(Device device, boolean needActive)
    {
        BuildingLevel buildingLevel = device.getBuildingLevel();
        if (buildingLevel != null)
        {
            Building building = buildingLevel.getBuilding();
            if (!needActive || building.getIsActiveFl())
            {
                return building;
            }
        }
        Site site = device.getSite();
        if (!needActive || site.getIsActiveFl())
        {
            return site;
        }

        return null;
    }

    protected Address getAddressForBuilding(Building building, AddressTypeEnum addressType, boolean needActive)
    {
        if (needActive && !building.getIsActiveFl())
        {
            return null;
        }
        BuildingAddressPK pk = new BuildingAddressPK();
        pk.setBuildingId(building.getBuildingId());
        pk.setAddressType(addressType);
        BuildingAddressJpaDao buildingAddressDao = new BuildingAddressJpaDao();
        try
        {
            buildingAddressDao.setEntityManager(getEntityManager());
        }
        catch (ServiceException e)
        {
        }
        BuildingAddress buildingAddress = buildingAddressDao.findById(pk);
        if (buildingAddress != null)
        {
            return buildingAddress.getAddress();
        }
        return null;
    }

